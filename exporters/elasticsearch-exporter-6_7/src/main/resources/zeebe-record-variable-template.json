{
  "index_patterns": [
    "zeebe-record_variable_*"
  ],
  "version": 1,
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index.queries.cache.enabled": false,
    "index": {
      "lifecycle": {
        "name": "zeebe-policy"
      }
    }
  },
  "aliases": {
    "zeebe-record-variable": {}
  },
  "mappings": {
    "_doc": {
      "properties": {
        "value": {
          "dynamic": "strict",
          "properties": {
            "name": {
              "type": "keyword"
            },
            "value": {
              "type": "keyword",
              "ignore_above": 8191
            },
            "scopeKey": {
              "type": "long"
            },
            "processInstanceKey": {
              "type": "long"
            },
            "processDefinitionKey": {
              "type": "long"
            },
            "bpmnProcessId": {
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
