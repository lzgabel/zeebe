{
  "index_patterns": [
    "zeebe-record_error_*"
  ],
  "version": 1,
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index.queries.cache.enabled": false,
    "index": {
      "lifecycle": {
        "name": "zeebe-policy"
      }
    }
  },
  "aliases": {
    "zeebe-record-error": {}
  },
  "mappings": {
    "_doc": {
      "properties": {
        "value": {
          "dynamic": "strict",
          "properties": {
            "exceptionMessage": {
              "type": "text"
            },
            "stacktrace": {
              "type": "text"
            },
            "errorEventPosition": {
              "type": "long"
            },
            "processInstanceKey": {
              "type": "long"
            }
          }
        }
      }
    }
  }
}
